<% layout("/layouts/boilerplate") -%>

<body>
  <div class="row mt-3">
   <div class="col-6 offset-3">
    <h3 class="mt-3 mb-4">Sign Up</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="user[username]" placeholder="Your username" type="text"  class="form-control" required/>
        <div class="valid-feedback">
        Username looks good!
        </div>
        <div class="invalid-feedback">
        Please provide a username
        </div>
      </div> 
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input name="user[email]" placeholder="Your email" type="email"  class="form-control" required/>
        <div class="valid-feedback">
        Email looks good!
        </div>
        <div class="invalid-feedback">
        Please provide a valid email
        </div>
      </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="user[password]" placeholder="Your password" type="password"  class="form-control" required/>
            <div class="valid-feedback">
            Password looks good!
            </div>
            <div class="invalid-feedback">
            Please provide a password
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
</div>
</div>
</body>